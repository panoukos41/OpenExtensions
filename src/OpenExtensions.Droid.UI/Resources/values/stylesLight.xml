<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <color name="Light_background">#fcfcfc</color>
  <color name="colorAccentLight">#2F87C2</color>

  <style name="LightTheme" parent="Theme.AppCompat.Light">
    <!--Customize Theme-->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccentLight</item>
    
    <item name="tabBackgroundColor">@color/Light_background</item>

    <!--SupportActionBar-->
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
  </style>

  <style name="LightTheme.FullScreen.Dialog" parent="Theme.AppCompat.Light.Dialog">
    <!--Customize Theme-->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccentLight</item>

    <item name="tabBackgroundColor">@color/Light_background</item>

    <!--SupportActionBar-->
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowBackground">@color/Light_background</item>

    <!-- Set this to true if you want Full Screen without status bar -->
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">false</item>

    <!-- Additionally if you want animations when dialog opening -->
    <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
    <item name="android:windowExitAnimation">@anim/exit_to_right</item>
  </style>
</resources>
